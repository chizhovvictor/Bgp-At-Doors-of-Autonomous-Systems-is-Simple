# Создать bridge-интерфейс
ip link add br0 type bridge
ip link set br0 up

# Создать VXLAN-интерфейс
ip link add vxlan10 type vxlan id 10 dev eth1 dstport 4789
ip link set vxlan10 up

# Присоединить VXLAN и eth1 к bridge
ip link set vxlan10 master br0
ip link set eth1 master br0

# Назначить IP-адрес на bridge-интерфейсе
ip addr add 192.168.1.2/24 dev vxlan10

# Добавить маршрут для сети хоста 1
ip route add 30.1.0.0/24 via 192.168.1.1


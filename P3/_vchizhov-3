# Создать bridge-интерфейс
ip link add br0 type bridge
ip link set br0 up

# Создать VXLAN-интерфейс с динамической маршрутизацией
ip link add vxlan10 type vxlan id 10 dev eth1 group 239.1.1.1 dstport 4789
ip link set vxlan10 up

# Присоединить VXLAN и eth0 к bridge
ip link set vxlan10 master br0
ip link set eth0 master br0

# Зайти в терминал ffr
vtysh

# Перейти в режим настройки конфигурации нашего leaf
configure terminal (conf t)

# Настроить eth1
interface eth1
ip address 10.1.1.4/30
ip ospf area 0
ip ospf cost 20000

# Настроить lo
interface lo
ip address 1.1.1.3/32
ip ospf area 0
ip ospf cost 20000

router bgp 1
neighbor 1.1.1.1 remote-as 1
neighbor 1.1.1.1 update-source lo

address-family l2vpn evpn
neighbor 1.1.1.1 activate
exit-address-family

# config router mode
router ospf


